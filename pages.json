{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}
	    ,{
            "path" : "pages/user/user",
            "style": {
				"navigationBarTitleText": "信息"
			}
        }
        ,{
            "path" : "pages/userInfo/userInfo",
            "style": {
				"backgroundColorTop": "#ebebeb",  
				"backgroundColorBottom": "#ebebeb",
				"app-plus":{ 
					"scrollIndicator": "none",
					"titleNView": {  
						"backgroundColor":"#c0c0c0",
                        "searchInput":{
							"borderRadius": "15px",
							"placeholder": "输入要搜索内容"
						},
						"buttons":[
						{
							"text":"搜索",
							"fontSize": "16px",
							"width": "48px"
						}
						]
                    }  
				}
			}
        }
        ,{
            "path" : "pages/navBar/navBar",
            "style": {
            	"navigationBarTitleText": "导航栏",
            	"app-plus":{          //App端扩展配置
            		"pullToRefresh":{
            			"support":"true",
						"style":"default",
						"range":"10%",
            			"contentdown": {
							"caption": "下拉可刷新自定义文本"
						},
						"contentover": {
							"caption": "释放可刷新自定义文本"
						},
						"contentrefresh": {
							"caption": "正在刷新自定义文本"
						}
            
            		},
					"scrollIndicator" : "none",  
            		"titleNView":{      //原生导航栏配置参数
            			"backgroundColor":"#002a61",
            			"buttons": [{
                            "color": "#fff",
                            "float": "left",
                            "fontSize": "18px",
            				"text": "邢台市",
            				"width":"80px"
                        },
                        {
                             "color": "#fff",
                             "colorPressed": "#eee",
                             "float": "right",
                             "fontSize": "22px",
                             "text": "\ue678" 
                        }
                        ]
            		}
				}
            }
        }
        ,{
            "path" : "pages/navBar/list/list",
            "style" : {}
        }
    ],
	"tabBar": {
		"color": "#7a7e83",
		"selectedColor": "#0faeff",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"text": "首页",
			"iconPath": "static/img/home.png",
			"selectedIconPath": "static/img/homeHL.png"
		},{
			"pagePath": "pages/navBar/navBar",
			"text": "导航栏",
			"iconPath": "static/img/user.png",
			"selectedIconPath": "static/img/userHL.png"
		},{
			"pagePath": "pages/userInfo/userInfo",
			"text": "用户信息",
			"iconPath": "static/img/user.png",
			"selectedIconPath": "static/img/userHL.png"
		}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#0faeff",
		"navigationBarTitleText": "uni-app",
		"backgroundColor": "#F8F8F8"
	}
}
